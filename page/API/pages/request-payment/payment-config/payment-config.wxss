/* page/API/pages/request-payment/payment-config/payment-config.wxss */
.section {
  background: white;
  padding: 15px;
}
.section + .section {
  margin-top: 10px;
}
.section input{
  display: inline-block;
  border-bottom: 1px solid #e6e6e6;
  padding: 0 5px;
}
.form-group {
  display: flex;
  align-items: center;
  justify-content: center;
}
.form-group + .form-group {
  margin-top: 15px;
}
.form-group label {
  margin-right: 15px;
  width: 100px;
  text-align: right;
}
.form-group input {
  background-color: white;
}
.required::before {
  content: '* ';
  color: red;
}
.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title switch {
  color: #04be02;
}

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}
.zan-dialog__container {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}
.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}
.zan-dialog--show .zan-dialog__mask {
  display: block;
}




/*sim-ui  */
.sim-form {
  position: relative;
  background-color: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.sim-form-group,.sim-form-textarea,.sim-form-switch {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #fff;
  border-top: 1px solid #eee;  
}
.sim-form-group:first-child{
  border-top: none;
}
.sim-form-group>label:first-child {
  background-color: #fff;
  float: left;
  width: 160rpx;
}
.sim-form-group picker view{
  color: #666;
}
.sim-form-option {
  padding: 20rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  border-top: 1px solid #eee;
}
.sim-form-option>label:first-child {
  display: block;
  width: 100vw;
}
.sim-form-option>label:not(:first-child),.sim-form-option checkbox-group>label,.sim-form-option radio-group>label {
  display: flex;
  align-items: center;
}
.sim-form-option checkbox-group,.sim-form-option radio-group {
  display: flex;
  flex-wrap: wrap;
}
.checkbox {
  width: 50%;
  display: flex;
  justify-content: center;
}
.checkbox:nth-child(n+3) {
  margin-top: 15px;
}
.sim-form-switch {
  justify-content: space-between;
}

.sim-form-textarea>label:first-child {
  align-self: flex-start;
  width: 200rpx;
  position: relative;
}
.sim-form-textarea textarea {
  margin: 0;
}

